<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="brand" href="#">Disability Advantage</a>
            <ul class="nav">
                <li class="active"><a href="#">Helping you find schools that will be better for the learning and social environment for your child with special needs.</a></li>
            </ul>
        </div>
    </div>
</div>
<div id="mainContent" class="container-fluid">
    <!--Search criteria-->
    <div class="row-fluid">
        <form class="search-form">

            <div class="inputs-row">
                <label for="disabilityType">Your child's disability: </label>
                <select name="disabilityType" data-bind="foreach: Disabilities, value: SelectedDisability">
                    <option data-bind="attr: {value: ID}, text: Name"></option>
                </select>
            </div>

            <div class="inputs-row">
                <label for="grade">Your child's grade: </label>
                <select name="grade" data-bind="foreach: Grades, value: SelectedGrade">
                    <option data-bind="attr: {value: ID}, text: Name"></option>
                </select>
            </div>

            <div class="inputs-row">
                <label for="schoolDivision">Your school division: </label>
                <input type="search" class="search-query" placeholder="County name" data-bind="value: SelectedDivision" />
            </div>

            <br />
            <button type="submit" value="search" class="search-button btn btn-primary" data-bind="click: Search">
                <i class="icon-search"></i>
                Search
            </button>
        </form>
    </div>
    <!--Search results-->
    <div class="row-fluid">
        <ul class="results" data-bind="foreach: Schools">
            <li class="results-small row-fluid">
                <article class="well span12">
                    <div class="row-fluid">
                        <hgroup>
                            <h4 data-bind="text: Name"></h4>
                            <h5><span data-bind="text: DisabilityPercentage().toFixed(0)"></span>% - <span data-bind="text: DisabilityCount"></span> students with <span data-bind="text: DisabilityName"></span> out of <span data-bind="text: TotalCount"></span> total students</h5>
                        </hgroup>
                    </div>
                </article>
            </li>
        </ul>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/Scripts/knockout-2.1.0.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/search.js")"></script>
